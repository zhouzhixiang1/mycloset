<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="mycloset" transaction-type="RESOURCE_LOCAL">
		<class>modello2.Alloggiamento</class>
		<class>modello2.Armadio</class>
		<class>modello2.Componente</class>
		<class>modello2.Guardaroba</class>
		<class>modello2.Outfit</class>
		<class>modello2.TipoOutfit</class>
		<class>modello2.TipoVestito</class>
		<class>modello2.Vestito</class>
		<class>modello2.Utente</class>
		<class>modello2.SpazioVestito</class>
		<class>modello2.OutfitFatto</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/mycloset2"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>
